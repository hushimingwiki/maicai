<view class="p-box">
  <view class="user-info">
    <view class="left">
      <image src="{{userInfo.picture?userInfo.picture:'https://api.caiduohui.com:8080/assets/ca1.jpg'}}" mode="" />
      <view class="info">
        <view class="name">{{userInfo.nickname}}</view>
        <view class="vip-type">普通会员</view>
      </view>
    </view>
    <view class="right">
      <image src="https://api.caiduohui.com:8080/assets/jiantou-r.png" mode="" />
    </view>
  </view>

  <view class="user-income">
    <view class="info">
      <view class="font-w">0.06</view>
      <view class="text">待结算金额</view>
    </view>
    <view class="info">
      <view class="font-w">0.06</view>
      <view class="text">累计奖励</view>
    </view>
    <view class="info acc" bindtap="goCustomerList">
      <view class="flex-end">客户<image src="https://api.caiduohui.com:8080/assets/arrow-up-s-line-d.png" mode="" /></view>
    </view>
  </view>
</view>

<view class="publicize">
  <view class="title">推广工具</view>
  <view class="tool-list"> 
    <view class="tool" bindtap="showPublicizeModel">
      <image src="https://api.caiduohui.com:8080/assets/yaoqing.png" mode=""/>
      <view class="text">邀请推广</view>
    </view>
  </view>
</view>

<view class="publicize-model" wx:if="{{publicizeModel}}">
  <!-- <view class="baibao">
    <canvas id="myCanvas" type="2d" style="border: 1px solid; width: 300px; height: 150px;" />
  </view> -->

  <view class="caozuo">
    <view class="fx">
      <button class="fx-l">
        <image src="https://api.caiduohui.com:8080/assets/download.png" mode=""/>
        <view>下载海报</view>
      </button>
      <button class="fx-l" open-type='share' >
        <image src="https://api.caiduohui.com:8080/assets/wx.png" mode=""/>
        <view>发送好友</view>
      </button>
    </view>
    <view class="cancel" bindtap="cancel">取消</view>
  </view>
  
</view>