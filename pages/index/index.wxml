  <view class="zzz" style="height: {{capsuleObj.height}}px;margin-top: {{capsuleObj.top}}px;" bindtap="goCheckAdr">
    <image src="https://api.caiduohui.com:8080/assets/dingwei-w.png" mode=""/>
