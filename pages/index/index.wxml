      <view class="sc-v">
        <view wx:for="{{klqCoupon}}" wx:key="index" class="coupon-c">
          <view class="quan-price">￥<text>{{item.price}}</text></view>
          <view class="man">满{{item.full_price}}可用</view>
        </view>
      </view>
      </scroll-view>
    </view>
    <view class="go-use" bindtap="goUse">立即使用</view>
