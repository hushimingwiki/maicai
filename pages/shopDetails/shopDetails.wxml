<view class="box">
  <view class="swiper-box">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <swiper-item wx:for="{{shopDetails.pictures}}" wx:key="index">
        <view>
          <image src="{{item}}" mode="aspectFill" />
        </view>
      </swiper-item>
    </swiper>
  </view>
