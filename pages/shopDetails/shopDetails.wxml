              <image src="../../image/xx-1.png" mode=""/>
              <image src="../../image/xx-1.png" mode=""/>
              <image src="../../image/xx-2.png" mode=""/>
            </view>
           
          </view>
        </view>
        <view class="time">2024.01.05</view>
      </view>
